<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/pic_camera"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_bkg_blue_rect_round"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/pic_album"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_bkg_red_rect_round"
        android:gravity="center"
        android:text="相册"
        android:textColor="@color/colorPrimaryDark" />


    <ImageView
        android:id="@+id/pic_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_pic_choose_close" />
</LinearLayout>